---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Official website of the St. John Parade" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | St. John Parade</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <slot />
  </body>
</html>