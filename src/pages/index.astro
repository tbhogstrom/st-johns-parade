---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Welcome">
  <Navigation />
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-primary mb-8">Welcome to St. John Parade</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-secondary mb-4">Latest Updates</h2>
        <p class="text-gray-600">Stay tuned for the latest news and updates about this year's parade!</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-secondary mb-4">Get Involved</h2>
        <p class="text-gray-600">Learn how you can participate in or contribute to the parade.</p>
      </div>
    </div>
  </main>
</Layout>