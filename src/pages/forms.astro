---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const forms = [
  {
    title: 'Volunteer Registration',
    description: 'Sign up to volunteer for the parade',
    link: '/forms/volunteer'
  },
  {
    title: 'Participant Registration',
    description: 'Register your organization to participate in the parade',
    link: '/forms/participant'
  },
  {
    title: 'Sponsorship Inquiry',
    description: 'Learn about becoming a parade sponsor',
    link: '/forms/sponsor'
  },
  {
    title: 'Contact Us',
    description: 'Get in touch with the parade committee',
    link: '/forms/contact'
  }
];
---

<Layout title="Forms & Downloads">
  <Navigation />
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-primary mb-8">Forms & Downloads</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {forms.map(form => (
        <a href={form.link} class="block">
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <h2 class="text-xl font-semibold text-secondary mb-2">{form.title}</h2>
            <p class="text-gray-600">{form.description}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>