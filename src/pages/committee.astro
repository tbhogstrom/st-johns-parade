---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const committeeMembers = [
  {
    name: 'John Smith',
    role: 'Committee Chair',
    description: 'Leading the parade committee since 2020'
  },
  {
    name: 'Sarah Johnson',
    role: 'Vice Chair',
    description: 'Coordinating volunteer efforts and community outreach'
  },
  {
    name: 'Michael Brown',
    role: 'Treasurer',
    description: 'Managing parade finances and sponsorships'
  },
  {
    name: 'Lisa Davis',
    role: 'Secretary',
    description: 'Handling administrative duties and communications'
  }
];
---

<Layout title="Committee">
  <Navigation />
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-primary mb-8">Parade Committee</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {committeeMembers.map(member => (
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-secondary mb-2">{member.name}</h2>
          <h3 class="text-lg text-primary mb-2">{member.role}</h3>
          <p class="text-gray-600">{member.description}</p>
        </div>
      ))}
    </div>
  </main>
</Layout>