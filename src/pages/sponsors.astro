---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const sponsorLevels = [
  {
    level: 'Platinum',
    benefits: [
      'Premium placement in parade',
      'Large logo on website',
      'Social media recognition',
      'VIP event access'
    ]
  },
  {
    level: 'Gold',
    benefits: [
      'Priority placement in parade',
      'Medium logo on website',
      'Social media mention',
      'Event access'
    ]
  },
  {
    level: 'Silver',
    benefits: [
      'Parade participation',
      'Small logo on website',
      'Name in program'
    ]
  },
  {
    level: 'Bronze',
    benefits: [
      'Name on website',
      'Name in program'
    ]
  }
];
---

<Layout title="Sponsors">
  <Navigation />
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-primary mb-8">Our Sponsors</h1>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-secondary mb-6">Sponsorship Levels</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {sponsorLevels.map(level => (
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-primary mb-4">{level.level}</h3>
            <ul class="space-y-2">
              {level.benefits.map(benefit => (
                <li class="text-gray-600">â€¢ {benefit}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <div class="text-center">
      <h2 class="text-2xl font-semibold text-secondary mb-4">Become a Sponsor</h2>
      <p class="text-gray-600 mb-6">
        Join our community of sponsors and help make the St. John Parade a success.
      </p>
      <a
        href="/forms/sponsor"
        class="inline-block bg-primary text-white px-6 py-3 rounded-md hover:bg-primary/90 transition-colors"
      >
        Apply to Sponsor
      </a>
    </div>
  </main>
</Layout>